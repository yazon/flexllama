{
    "auto_start_runners": true,
    "api": {
        "host": "0.0.0.0",
        "port": 8080,
        "health_endpoint": "/health"
    },
    "retry_config": {
        "max_retries": 3,
        "base_delay_seconds": 2,
        "max_delay_seconds": 30,
        "retry_on_model_loading": true
    },
    "runner1": {
        "type": "llama-server",
        "path": "/usr/local/bin/llama-server",
        "host": "0.0.0.0",
        "port": 8085,
        "extra_args": ["--verbose", "--no-mmap"]
    },
    "runner2": {
        "type": "llama-server",
        "path": "/usr/local/bin/llama-server",
        "host": "0.0.0.0",
        "port": 8086,
        "extra_args": ["--verbose", "--no-mmap"]
    },

    "models": [
        {
            "runner": "runner1",
            "model": "/app/models/huihui-gpt-oss-20b.gguf",
            "model_alias": "huihui-gpt-oss-20b",
            "n_ctx": 4096,
            "n_batch": 512,
            "n_threads": 20,
            "offload_kqv": true,
            "flash_attn": false,
            "use_mlock": true,
            "main_gpu": 0,
            "tensor_split": [0.5],
            "n_gpu_layers": 20,
            "jinja": true,
            "rope-scaling": "yarn",
            "yarn-orig-ctx": 4096,
            "cache-type-k": "f16",
            "cache-type-v": "f16",
            "args": "--rope-freq-base 150000.0 --rope-freq-scale 0.03125 --no-mmap"
        },
        {
            "runner": "runner2",
            "model": "/app/models/huihui-gpt-oss-20b-alt.gguf",
            "model_alias": "huihui-gpt-oss-20b-alt",
            "n_ctx": 4096,
            "n_batch": 512,
            "n_threads": 20,
            "offload_kqv": true,
            "flash_attn": false,
            "use_mlock": true,
            "main_gpu": 0,
            "tensor_split": [0.5],
            "n_gpu_layers": 20,
            "jinja": true,
            "rope-scaling": "yarn",
            "yarn-orig-ctx": 4096,
            "cache-type-k": "f16",
            "cache-type-v": "f16",
            "args": "--rope-freq-base 150000.0 --rope-freq-scale 0.03125 --no-mmap"
        }
    ]
}